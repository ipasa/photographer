{% extends 'templates/app.twig' %}

{% block content %}
    <section class="pageheader">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <h4>Register</h4>
                </div>
            </div>
        </div>
    </section>

    <section class="section white">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div id="loginbox">
                        <div class="panel panel-info">
                            <div class="panel-heading text-center">
                                <div class="panel-title">Register as a New Member</div>
                            </div>
                            <div class="panel-body">
                                <form action="{{ path_for('auth.signup') }}" method="post" id="loginform"
                                      class="form-horizontal" role="form">

                                    <div class="input-group{{ errors.name ? ' has-error':'' }}">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i> Enter Your Name</span>
                                        <input id="login-username" type="text" class="form-control" name="name" value="{{ old.name }}" placeholder="Full Name ">
                                        {% if errors.name %}
                                            <span class="help-block">{{ errors.name | first }}</span>
                                        {% endif %}
                                    </div>
                                    <br>

                                    <div class="input-group{{ errors.email ? ' has-error':'' }}">
                                        <span class="input-group-addon"><i
                                                    class="fa fa-envelope"></i> Email Address</span>
                                        <input id="login-password2" type="email" class="form-control" name="email" placeholder="Your email address" value="{{ old.email }}">
                                        {% if errors.email %}
                                            <span class="help-block">{{ errors.email | first }}</span>
                                        {% endif %}
                                    </div>
                                    <br>

                                    <div class="input-group{{ errors.password ? ' has-error':'' }}">
                                        <span class="input-group-addon"><i class="fa fa-unlock-alt"></i> Password</span>
                                        <input id="login-password3" type="password" class="form-control" name="password" placeholder="******">
                                        {% if errors.password %}
                                            <span class="help-block">{{ errors.password | first }}</span>
                                        {% endif %}
                                    </div>
                                    <hr>

                                    <div class="form-group row">
                                        <div class="col-sm-12 controls clearfix">
                                            <div class="pull-right">
                                                <button type="submit" id="btn-login3" href="#"
                                                        class="btn btn-normal btn-primary">Register
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    {{ csrf.field | raw }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </section><!-- end section -->


