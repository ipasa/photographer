{% extends 'templates/app.twig' %}

{% block content %}
    <section class="pageheader">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <h4>Login</h4>
                </div>
            </div>
        </div>
    </section>

    <section class="section white">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div id="loginbox3">
                        <div class="panel panel-info">
                            <div class="panel-heading text-center">
                                <div class="panel-title">Login</div>
                            </div>
                            <div class="panel-body">
                                <form action="{{ path_for('auth.signin') }}" method="post" id="loginform1" class="form-horizontal" role="form">
                                    <div class="input-group{{ errors.email ? ' has-error':'' }}">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i> User Name or Email</span>
                                        <input id="login-username1" type="email" class="form-control" name="email" value="{{ old.email }}"
                                               placeholder="your email address"
                                        >
                                        {% if errors.email %}
                                            <span class="help-block">{{ errors.email | first }}</span>
                                        {% endif %}
                                    </div>
                                    <br>
                                    <div class="input-group{{ errors.password ? ' has-error':'' }}">
                                        <span class="input-group-addon"><i class="fa fa-unlock-alt"></i> Password</span>
                                        <input id="login-password1" type="password" class="form-control" name="password" placeholder="password">
                                        {% if errors.password %}
                                            <span class="help-block">{{ errors.password | first }}</span>
                                        {% endif %}
                                    </div>
                                    <br>
                                    <div class="input-group padding-left">
                                        <div class="checkbox">
                                            <label>
                                                <input id="login-remember1" type="checkbox" name="remember" value="1"> Remember me
                                            </label>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-group row">
                                        <div class="col-sm-12 controls clearfix">
                                            <div class="pull-left">
                                                <button type="submit" id="btn-login" class="btn btn-normal btn-primary">Login</button>
                                            </div>
                                            <div class="pull-right">
                                                <a href="#">Forget Password?</a>
                                            </div>
                                        </div>
                                    </div>
                                    {{ csrf.field | raw }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </section><!-- end section -->

